<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GABC Demo</title>
    <link rel="shortcut icon" href="~/logo.png" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body ng-app="myFaceApp" class="ng-cloak">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:floralwhite;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               @Html.ActionLink("Microsoft FaceAPI", "", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Face Detection", "", "FaceDetection")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" color="white;">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <h2><p>&copy; @DateTime.Now.Year - GABC Demo Web App</p></h2>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    @RenderSection("NgScript", false)
</body>
</html>